---
extends: default
ignore: |
  .tox/
  .gitlab-ci.yml
rules:
  braces:
    max-spaces-inside: 1
    min-spaces-inside: 0
  brackets:
    max-spaces-inside: 1
    min-spaces-inside: 0
  document-start:
    level: error
  key-ordering: enable
  line-length:
    allow-non-breakable-words: true
    max: 90
  truthy:
    level: error
